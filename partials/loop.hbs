{{!-- This is the post loop - each post will be output using this markup --}}
{{#foreach posts}}
<div class="post-title">
  <h1><a href="{{url}}"><font size=5><i>{{title}}</i></font></a></h1>
</div>
<div class="post-content">
  <p>
    <a class="post-excerpt" href="{{url}}">{{excerpt characters="140"}} ...read more</a>
  </p>
</div>
<h5>
  <span class="small">{{authors}} at</span>
  <time class="small" datetime="{{date format="YYYY-MM-DD"}}">{{date format="YYYY MMM DD"}}</time>
  <span class="small">{{tags prefix=" | "}}</span>
  <span class="small"> | </span>
  <span class="small">
    <a href="{{url}}#disqus_thread" data-disqus-identifier="{{comment_id}}"></a>
  </span>
</h5>
{{/foreach}}

{{!-- Previous/next page links - displayed on every page --}}
<div class="center">
  {{pagination}}
</div>
